extends base

block content
  p Hello #{name},
  p Thank you for reaching out to us! We've received your message and our team will get back to you as soon as possible.
  
  if message
    .message-container(style='background-color: #f5f5f5; padding: 15px; border-radius: 5px; margin: 20px 0;')
      p(style='margin: 0;') #{message}
  
  p If you have any urgent inquiries, please don't hesitate to contact us directly at #{process.env.ADMIN_EMAIL}.
  
  p Best regards,
  p The Portfolio Team
